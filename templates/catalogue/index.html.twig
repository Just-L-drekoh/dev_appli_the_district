{% extends 'base.html.twig' %}

{% block title %}The District : Accueil{% endblock %}

{% block body %}
<video  width="100%"  class="d-none d-md-flex" loop autoplay muted>
    <source src="{{asset ('img/images_the_district/restaurant.mp4')}}" type="video/mp4">
</video>



<div id="presentation_district"></div>



<div id="carouselExampleSlidesOnly" class="carousel slide w-50 justify-content-center d-flex mx-auto" data-bs-ride="carousel">
  <div class="carousel-inner "> 
  <div class="carousel-item active">
      <img src="{{asset ('img/images_the_district/img-presentation.jpg')}}" class="d-block w-100" alt="img_presentation">
    </div>
    <div class="carousel-item">
      <img src="{{asset ('img/images_the_district/img-salle.jpg')}}" class="d-block w-100" alt="...">
    </div>
    <div class="carousel-item">
      <img src="{{asset ('img/images_the_district/img-bar.jpg')}}" class="d-block w-100" alt="...">
    </div>
  </div>
</div>

<div id="presentation_salle"></div>

<div id="best_categories"></div>

<div class="categories row">
  {% for categorie in categories %}
  <div class='card col-12 col-md-6 col-lg-4 p-0 d-flex justify-content-center p-0 m-0'>
    <img class='card-img-top' src="{{asset('/img/images_the_district/category/' ~ categorie.image)}}" style="max-height: 150px; object-fit: cover;">
    <div class='card-body'>
      <h3 class="justify-content-center">{{categorie.libelle}}</h3>
      <div class='button'>
      <a href="{{path ('app_plats_cat', {"": categorie.libelle})}}" class='btn btn-link '>Voir les plats -></a>
      </div>    
    </div>
  </div>
  {% endfor %} 
</div>



<div id="best_plats"></div>

<div class="plats row mt-5">
  {% for plat in plats %}
  <div class='card col-12 col-md-6 col-lg-4 p-0 d-flex justify-content-center p-0 m-0'>
    <img class='img-card' src="{{asset('/img/images_the_district/food/' ~ plat.image)}}">
    <div class='card-body'>
      <h3 class="justify-content-center">{{plat.libelle}}</h3>
      <p class="description">{{plat.description}}</p>
      <h5>{{plat.prix}} €</h5>
      <div class='button'>
      <button class='btn btn-link '>Ajouter au Panier -></button>
      </div>    
    </div>
  </div>
  {% endfor %} 
</div>


